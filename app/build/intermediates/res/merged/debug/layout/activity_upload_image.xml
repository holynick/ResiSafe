<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_upload_image"
    android:background="#2E4172"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fypyau.resisafe.UploadImageActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Upload a Profile Picture"
        android:layout_centerHorizontal="true"
        android:textSize="27dp"
        android:id="@+id/textView13" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Image and Proceed to Final Step"
        android:id="@+id/buttonUpload"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src= "@drawable/unknownprofile"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFF"
        android:layout_above="@+id/buttonChoose"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Come on, we need to know what you look like"
        android:textSize="15dp"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Browse your gallery"
        android:id="@+id/buttonChoose"
        android:layout_marginBottom="89dp"
        android:layout_above="@+id/buttonUpload"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

</RelativeLayout>
