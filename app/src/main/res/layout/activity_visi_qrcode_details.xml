<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_visi_qrcode_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fypyau.resisafe.VisiQRcodeDetailsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Anderson Birthday Party"
        android:textSize="30dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textStyle="bold"

        android:id="@+id/tvEventname" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/relativeLayout4">


        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Swimming Pool"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:id="@+id/tvEventlocation"
            android:layout_marginBottom="36dp"
            android:layout_above="@+id/tvStartdate"
            android:layout_alignLeft="@+id/tvStartdate"
            android:layout_alignStart="@+id/tvStartdate" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="25/2/2017, 13:00"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:id="@+id/tvStartdate"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Location:"
            android:layout_above="@+id/tvEventlocation"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView23" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starting Date:"
        android:id="@+id/textView24"
        android:layout_above="@+id/tvStartdate"
        android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ending Date:"
            android:id="@+id/textView25"
            android:layout_above="@+id/tvEnddate"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="25/2/2017, 16:00"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:id="@+id/tvEnddate"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/tvStartdate"
            android:layout_alignStart="@+id/tvStartdate"
            android:layout_marginBottom="32dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/white"
        android:id="@+id/relativeLayout4"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/tvEventname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/qrcodeimage"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
