<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_resi_event_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.fypyau.resisafe.ResiEventDetailsActivity"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/detailshouse"
        android:id="@+id/imgback">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="3dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="5dp"
            card_view:cardCornerRadius="1dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            >

            <TextView
                android:layout_width="280dp"
                android:layout_height="70dp"
                android:text="Empty"
                android:gravity="center"
                android:id="@+id/eventname"
                android:textColor="@color/grey"
                android:textSize="25dp"
                />
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Swimming Pool"
            android:layout_below="@+id/card_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:id="@+id/eventlocation" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgback"
        android:padding="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Event Description"
            android:textColor="@color/turqoiseblue"
            android:padding="10dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:id="@+id/eventdescription" />


        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textColor="@color/darkgrey"
            android:textStyle="bold"
            android:elevation="5dp"
            android:padding="10dp"
            android:gravity="center"
            android:text="View all checked in users"
            android:background="@drawable/back"
            android:id="@+id/viewall"
            android:layout_below="@+id/eventcreator"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Creator: Yau Yat Way"
            android:textSize="20dp"
            android:id="@+id/eventcreator"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/card_view2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:elevation="3dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="8dp"
            card_view:cardCornerRadius="1dp"
            android:layout_below="@+id/eventdescription"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:layout_gravity="top"
                android:gravity="center"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_gravity="center"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15:00 to 16:00"
                android:textStyle="bold"
                android:textColor="@color/darkgrey"
                android:gravity="center"
                android:layout_marginBottom="26dp"
                android:textSize="25dp"
                android:id="@+id/time"
                android:layout_below="@+id/card_view2"
                android:layout_gravity="bottom" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="95dp"
                android:text="End Date"
                android:padding="5dp"
                android:gravity="center"
                android:id="@+id/textView37" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25/02/2017 to 26/02/2017"
                android:layout_marginTop="27dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="@color/darkgrey"
                android:id="@+id/date" />

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
    </ScrollView>
