<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#2E4172">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.fypyau.resisafe.VisiRegisterActivity">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:padding="5dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etFullName"
            android:hint="Full Name"
            android:background="@drawable/roundedregisterback"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:layout_marginTop="93dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:id="@+id/tvName"
            android:hint="Username"
            android:background="@drawable/roundedregisterback"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/etFullName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:padding="5dp"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:id="@+id/etPassword"
        android:background="@drawable/roundedregisterback"
        android:hint="Password"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/tvName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:padding="5dp"
            android:ems="10"
            android:id="@+id/etConfirmPassword"
            android:background="@drawable/roundedregisterback"
            android:hint="Confirm Password"
            android:layout_marginTop="15dp"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/etPassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nationality"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:layout_below="@+id/etConfirmPassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tvNationality" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/nationalityspinner"
            android:entries="@array/country_arrays"
            android:prompt="@string/country_prompt"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tvNationality"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ictypesspinner"
            android:entries="@array/ictypes_arrays"
            android:prompt="@string/ictypes_prompt"
            android:layout_below="@+id/nationalityspinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/etICnum"
            android:layout_toStartOf="@+id/etICnum"
            android:layout_above="@+id/etCarplatenum" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etICnum"
            android:hint="IC Number"
            android:textColorHint="#FFFFFF"
            android:layout_marginTop="15dp"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/nationalityspinner"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:ems="10"
            android:padding="5dp"
            android:id="@+id/etCarplatenum"
            android:hint="Car Plate Number"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:background="@drawable/roundedregisterback"
            android:layout_below="@+id/etICnum"
            android:layout_marginTop="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="phone"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:ems="10"
            android:background="@drawable/roundedregisterback"
            android:id="@+id/etContact"
            android:hint="Contact Number"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/etCarplatenum"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proceed to next step"
            android:id="@+id/bRegister"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/etContact"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Visitor Registration Form"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registertitle"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_marginTop="27dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
</LinearLayout>
</ScrollView>